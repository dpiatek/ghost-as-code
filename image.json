{
  "builders": [{
    "profile": "private",
		"region": "eu-west-1",
		"type": "amazon-ebs",
		"source_ami": "ami-58d7e821", 
		"instance_type": "t2.micro",
		"ssh_username": "ubuntu",
		"ami_name": "blog {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./blog.conf",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "file",
      "source": "./obtain-cert.sh",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "file",
      "source": "./start-ghost.sh",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "shell",
      "script": "./install.sh"
    }
  ]
}
